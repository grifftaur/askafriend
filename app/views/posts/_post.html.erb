<%= form_for @post do |f| %>
  <%= f.label :title %></br>
  <%= f.text_field :title %></br>
  <%= f.label :category %></br>
  <%= f.select :category, ['Looking For Recommendation','Asking A Question'], prompt: 'Select One' %></br>
  <%= f.label :body %></br>
  <%= f.text_area :body %></br>
  <%= f.submit %>
<% end %>
